{
  "permissions": {
    "allow": [
      "Bash(uv:*)",
      "Bash(awk:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(git log:*)",
      "Bash(git config:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(tail:*)",
      "Bash(test:*)",
      "Bash(wc:*)"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.envrc)"
    ]
  },
  "enabledPlugins": {
    "feature-dev@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true
  }
}
